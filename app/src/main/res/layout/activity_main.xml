<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/ipplaceholder"
            android:ems="10"
            android:id="@+id/ipTextEdit" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="@string/ipconfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ipConfirm"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTextEdit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:onClick="register_player"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/idTextView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/ipConfirm"/>

    <TextView
            android:text="TextView"
            android:layout_width="127dp"
            android:layout_height="61dp"
            android:id="@+id/goalTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="260dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/nameTextEdit" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ipTextEdit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
    />

    <Button
            android:text="Up"
            android:layout_width="137dp"
            android:layout_height="51dp"
            android:id="@+id/upButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:tag="3"
            android:onClick="sendUp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="364dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/downButton"/>

    <Button
            android:text="Down"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:id="@+id/downButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:tag="1"
            android:onClick="sendDown"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.807"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Left"
            android:layout_width="133dp"
            android:layout_height="50dp"
            android:id="@+id/leftButton"
            android:tag="2"
            android:onClick="sendLeft"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.11" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/upButton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/downButton"/>
    <Button
            android:text="Right"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:id="@+id/rightButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:tag="0"
            android:onClick="sendRight"
            app:layout_constraintStart_toEndOf="@+id/leftButton" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.739" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/upButton" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/downButton"/>
    <TextView
            android:layout_width="114dp"
            android:layout_height="33dp"
            android:id="@+id/Power_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ipConfirm" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="114dp"
            android:layout_height="34dp"
            android:id="@+id/Trap_text" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Power_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" tools:text="tr"/>

</android.support.constraint.ConstraintLayout>